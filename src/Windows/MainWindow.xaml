<Window x:Class="StellasoraPotentialOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ステラソラ素質オーバーレイ"
        Height="300"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Grid.Row="0" 
                   Text="ステラソラ素質オーバーレイ"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- ステータス表示 -->
        <GroupBox Header="ステータス" Grid.Row="1" Margin="0,0,0,20">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="状態:" Width="120" FontWeight="Bold"/>
                    <TextBlock x:Name="StatusTextBlock" Text="停止中" Foreground="Gray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="対象ウィンドウ:" Width="120" FontWeight="Bold"/>
                    <TextBlock x:Name="TargetWindowTextBlock" Text="未設定" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- コントロールボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="StartButton" 
                    Content="開始" 
                    Click="Start_Click" 
                    Width="120"
                    Height="35"
                    Margin="5"
                    FontSize="14"
                    FontWeight="Bold"/>
            <Button x:Name="StopButton" 
                    Content="停止" 
                    Click="Stop_Click" 
                    Width="120"
                    Height="35"
                    Margin="5"
                    FontSize="14"
                    FontWeight="Bold"
                    IsEnabled="False"/>
            <Button Content="設定" 
                    Click="Settings_Click" 
                    Width="120"
                    Height="35"
                    Margin="5"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
