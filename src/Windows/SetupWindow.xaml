<Window x:Class="StellasoraPotentialOverlay.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StellasoraPotentialOverlay"
        Title="探索準備 - パーティと素質選択" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="キャラクターを選択し、検出したい素質にチェックを入れてください" Margin="0,0,0,10" FontWeight="Bold"/>

        <!-- 3列レイアウト -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 1. 主力エリア (部品を置くだけ) -->
            <local:CharacterSelectionControl x:Name="MainControl" Grid.Column="0"/>

            <!-- 区切り線 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- 2. 支援1エリア -->
            <local:CharacterSelectionControl x:Name="Sup1Control" Grid.Column="2"/>

            <!-- 区切り線 -->
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- 3. 支援2エリア -->
            <local:CharacterSelectionControl x:Name="Sup2Control" Grid.Column="4"/>
        </Grid>

        <!-- ボタンエリア -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存" Click="Save_Click" Width="100" Height="35" Margin="0,0,10,0"/>
            <Button Content="キャンセル" Click="Cancel_Click" Width="100" Height="35"/>
        </StackPanel>
    </Grid>
</Window>