<UserControl x:Class="StellasoraPotentialOverlay.CharacterSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <UserControl.Resources>
        <x:Array x:Key="LevelOptions" Type="{x:Type system:String}">
            <system:String>取得のみ</system:String>
            <system:String>レベル1</system:String>
            <system:String>レベル1～</system:String>
            <system:String>レベル6</system:String>
        </x:Array>
    </UserControl.Resources>

    <DockPanel>
        <!-- ヘッダー部分 (コンボボックス) -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,5">
            <!-- タイトル色はコードから変更可能にする -->
            <TextBlock x:Name="HeaderTitle" Text="【役割】" FontWeight="Bold" HorizontalAlignment="Center"/>
            <ComboBox x:Name="CharCombo" SelectionChanged="CharCombo_SelectionChanged" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- テーブル部分 -->
        <DataGrid x:Name="PotentialsGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single" BorderThickness="1" BorderBrush="Gray">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="有効" Binding="{Binding IsSelected}" Width="40"/>
                
                <!-- 素質名 -->
                <DataGridTemplateColumn Header="素質名" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" 
                                       Background="{Binding DisplayBrush}" 
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Padding="5,2"
                                       ToolTip="{Binding Description}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 目標 -->
                <DataGridComboBoxColumn Header="目標" SelectedItemBinding="{Binding TargetLevel}" ItemsSource="{StaticResource LevelOptions}" Width="80"/>
                
                <!-- メモ -->
                <DataGridTextColumn Header="メモ" Binding="{Binding Memo}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>